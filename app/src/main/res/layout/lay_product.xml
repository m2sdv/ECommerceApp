<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="3.8dp"
            android:layout_marginRight="10.6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:layout_marginLeft="14.4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/FoodImage_Id"
                        android:src="@drawable/pexel"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="4dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">

                        <com.ecommerce.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14.4sp"
                            android:textColor="#262628"
                            android:text="Cocobolo Poolside Bar + Grill"/>

                        <com.ecommerce.customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtDollar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:textSize="15sp"
                            android:textColor="#d22532"
                            android:text="$ 312.00"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgMinus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/ic_minus_on_black_24dp"
                        android:tint="#d22532" />

                    <com.ecommerce.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1"
                        android:textColor="#4a4a4a"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6.7dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:tint="#d22532" />

                    <com.ecommerce.customfonts.MyTextView_Roboto_Bold
                        android:id="@+id/txtAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_weight="1"
                        android:text="ADD"
                        android:textColor="#d22532"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
